<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ROSBox.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        xmlns:models="clr-namespace:ROSBox.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ROSBox.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ROSBox"
        FontFamily="{DynamicResource HarmonyOS_Sans}">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <DockPanel LastChildFill="True">
        <DockPanel
            Dock="Top">
            <WrapPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="File">
                        <MenuItem Header="Open" Command="{Binding SearchFolder}"/>
                        <Separator/>
                        <MenuItem Header="Exit"/>
                    </MenuItem>
                    <MenuItem Header="Edit">
                        <MenuItem Header="Copy"/>
                        <MenuItem Header="Paste"/>
                    </MenuItem>
                </Menu>
            </WrapPanel>
        </DockPanel>
        
        <Separator Margin="0"
            DockPanel.Dock="Top">
        </Separator>
        
        <DockPanel
            Dock="Top">
                <Button>
                    Build
                </Button>
                <Button>
                    Launch
                </Button>
                <Button>
                    Launch Set
                </Button>
        </DockPanel>
        
        
        <DockPanel
            Background="LimeGreen"
            Dock="Bottom">
            <TextBlock Foreground="Black">ROS Status Indicators</TextBlock>
        </DockPanel>
        
        <Border
            Width="150"
            BorderBrush="DarkGray"
            BorderThickness="1"
            DockPanel.Dock="Left">
            
            <TreeView ItemsSource="{Binding FolderItems}">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}"
                                      x:DataType="models:DirectoryTreeNode">
                        <!-- <WrapPanel> -->
                        <TextBlock Text="{Binding NodeName}"/>
                        <!--     <TextBlock>[子目录:</TextBlock> -->
                        <!--     <TextBlock Text="{Binding FolderNum}"/> -->
                        <!--     <TextBlock>,文件:</TextBlock> -->
                        <!--     <TextBlock Text="{Binding FileNum}"/> -->
                        <!--     <TextBlock>]</TextBlock> -->
                        <!-- </WrapPanel> -->
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>
        
        <Border
            BorderBrush="DarkGray"
            BorderThickness="1">
            <AvaloniaEdit:TextEditor 
                Text="Code Editor"
                ShowLineNumbers="True"
                FontFamily="{StaticResource Intel_One_Mono}"
                />
        </Border>
        
    </DockPanel>
</Window>
